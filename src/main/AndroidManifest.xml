<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.carlos.ceciliaapp">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.TarefasActivity"
            android:label="@string/title_activity_tarefas"
            android:theme="@style/AppTheme"
            android:launchMode="singleTask"/>
        <activity
            android:name=".activity.AvaliacoesActivity"
            android:label="@string/title_activity_avaliacoes"
            android:theme="@style/AppTheme"
            android:launchMode="singleTask"/>
        <activity
            android:name=".activity.AvaliacoesDetalhesActivity"
            android:label="@string/title_activity_avaliacoes_detalhes"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.NovaTarefaActivity"
            android:label="@string/title_activity_nova_tarefa"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>