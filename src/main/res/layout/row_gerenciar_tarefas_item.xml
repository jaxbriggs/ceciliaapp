<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <!--Ações-->
    <RelativeLayout
        android:id="@+id/actionButtonsContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:id="@+id/actionButtonsValores"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/actionEditar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/settings" />

            <ImageView
                android:id="@+id/actionExcluir"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/delete" />

        </LinearLayout>

    </RelativeLayout>

    <!--Informações-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/txtTituloTarefa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/holo_red_light"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <LinearLayout
            android:id="@+id/dataContainer"
            android:layout_below="@+id/txtTituloTarefa"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtDataLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inclusão: "
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/txtDataValor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="04/01/2016"
                android:textColor="@android:color/black"
                android:textSize="15dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/dataContainer"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtPeriodicidadeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Periodicidade: "
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/txtPeriodicidadeValor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="15dp"/>

        </LinearLayout>
    </RelativeLayout>



</RelativeLayout>