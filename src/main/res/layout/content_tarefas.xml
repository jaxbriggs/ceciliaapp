<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_tarefas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="br.com.carlos.ceciliaapp.activity.TarefasActivity"
    tools:showIn="@layout/activity_tarefas">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <br.com.carlos.ceciliaapp.slidingtabs.SlidingTabLayout
            android:id="@+id/tarefas_sliding_tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colortSlidingTabs"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/tarefas_view_pager_adapter"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="2"
            android:background="@android:color/white"/>

    </LinearLayout>

</RelativeLayout>
